<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_background"
    android:id="@+id/reservation"
    tools:context=".reservation_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp">

                    <TextView
                        android:id="@+id/checkindate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/darkb"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-in date"
                        android:textColor="@color/grey"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textAllCaps="true"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:id="@+id/checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:id="@+id/checkoutdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/darkb"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-out date"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textAllCaps="true"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/cint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <Spinner
                        android:id="@+id/intime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/darkb"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-in Time"
                        android:textColor="@color/grey"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textAllCaps="true"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <LinearLayout
                    android:id="@+id/outt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <Spinner
                        android:id="@+id/outtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/darkb"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-out Time"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textAllCaps="true"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/room"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:hint="Eg.2"
                    android:textColorHint="@color/darkb"
                    android:inputType="number"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="Number of Rooms"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:text="Rooms"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/adult"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:hint="Eg.4"
                    android:textColorHint="@color/darkb"
                    android:inputType="number"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="Number of Adult"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:text="( 18+ years )"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/child"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:hint="Eg.2"
                    android:textColorHint="@color/darkb"
                    android:inputType="number"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="Number of Children"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:textColor="@color/grey"
                        android:text="( 17- years )"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reserve"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:backgroundTint="@null"
                android:text="Make Reservation"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>