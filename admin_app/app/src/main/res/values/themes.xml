<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Admin_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppCompat.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/uploadbutton</item>
    </style>

    <style name="uploadbutton">
        <item name="colorOnBackground">@color/upload</item>
    </style>

    <style name="textlimit" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.Admin_app.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Admin_app.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Admin_app.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>